#
# NUBO (TSBOARD) 서버쪽 설정 파일
#

# 백엔드 서버
GOAPI_VERSION=2.0.0-alpha1
GOAPI_PORT=3003
GOAPI_URL=https://nubohub.org
GOAPI_URL_PREFIX=
GOAPI_TITLE=NUBO

GOAPI_PROFILE_SIZE=256
GOAPI_CONTENT_INSERT_SIZE=640
GOAPI_THUMBNAIL_SIZE=512
GOAPI_FULL_SIZE=2400
GOAPI_FILE_SIZE_LIMIT=104857600

# NUXT 클라이언트에 노출할 변수들
NUXT_PUBLIC_VERSION=${GOAPI_VERSION}
NUXT_PUBLIC_URL=${GOAPI_URL}
NUXT_PUBLIC_URL_PREFIX=${GOAPI_URL_PREFIX}
NUXT_PUBLIC_TITLE=${GOAPI_TITLE}

NUXT_PUBLIC_PROFILE_SIZE=${GOAPI_PROFILE_SIZE}
NUXT_PUBLIC_CONTENT_INSERT_SIZE=${GOAPI_CONTENT_INSERT_SIZE}
NUXT_PUBLIC_THUMBNAIL_SIZE=${GOAPI_THUMBNAIL_SIZE}
NUXT_PUBLIC_FULL_SIZE=${GOAPI_FULL_SIZE}
NUXT_PUBLIC_FILE_SIZE_LIMIT=${GOAPI_FILE_SIZE_LIMIT}

# 데이터베이스 세팅 (DB_UNIX_SOCKET 경로를 모를 경우 공란 유지)
DB_HOST=#dbhost#
DB_USER=#dbuser#
DB_PASS=#dbpass#
DB_NAME=#dbname#
DB_TABLE_PREFIX=#dbprefix#
DB_UNIX_SOCKET=#dbsock#
DB_MAX_IDLE=#dbmaxidle#
DB_MAX_OPEN=#dbmaxopen#

# JWT 설정
JWT_SECRET_KEY=#jwtsecret#
JWT_ACCESS_HOURS=2
JWT_REFRESH_DAYS=30

# 관리자 아이디(이메일) 및 비밀번호
ADMIN_ID=#adminid#
ADMIN_PW=#adminpw#

# 구글 앱비밀번호 for GMAIL 발송
# 참고) https://velog.io/@seul06/nodemailer
GMAIL_ID=
GMAIL_APP_PASSWORD=

# 구글 OAuth 클라이언트 (없다면 공란 유지)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_SECRET=

# 네이버 OAuth 클라이언트 (없다면 공란 유지)
OAUTH_NAVER_CLIENT_ID=
OAUTH_NAVER_SECRET=

# 카카오 OAuth 클라이언트 (없다면 공란 유지)
OAUTH_KAKAO_CLIENT_ID=
OAUTH_KAKAO_SECRET=

# OpenAI API Key (없다면 공란 유지)
OPENAI_API_KEY=